@using UI.Components.Dialogs.Base
@inherits BaseDialog<object, object>

<BaseDialogLayout IsShown="IsShown">
    <BaseModal Title="@LocalizationService.Localization.InfoDialog_Title" OnClose="() => this.Close(null)" OnKeyEnterPressed="OnKeyEnterPressed" DispalyCenter="true">
        <Content>
            <div class="d-flex flex-column justify-content-start align-items-start mt-2">
                <div>@LocalizationService.Localization.InfoDialog_DescriptionText</div>
                <div class="mt-2">@LocalizationService.Localization.InfoDialog_DesignationsLabel</div>
                <div class="d-flex flex-row align-items-center mt-2 ms-3">
                    <div class="column-name-frame" style="min-width: 2em" />
                    <div class="ms-2">@LocalizationService.Localization.InfoDialog_FrameColorDescription_Blue</div>
                </div>
                <div class="d-flex flex-row align-items-center mt-2 ms-3">
                    <div class="column-name-frame" style="min-width: 2em; background-color: var(--bs-danger)" />
                    <div class="ms-2">@LocalizationService.Localization.InfoDialog_FrameColorDescription_Red</div>
                </div>
                <div class="d-flex flex-row align-items-center mt-2 ms-3">
                    <div class="column-name-frame" style="min-width: 2em; background-color: var(--bs-success)" />
                    <div class="ms-2">@LocalizationService.Localization.InfoDialog_FrameColorDescription_Green</div>
                </div>
            </div>
        </Content>
        <Footer>
            <div class="mt-3">
                <ModalButton class="btn-outline-success" OnClick="() => this.Close(null)">@LocalizationService.Localization.Common_Ok</ModalButton>
            </div>
        </Footer>
    </BaseModal>
</BaseDialogLayout>

@code {

    protected void OnKeyEnterPressed()
    {
        this.Close(null);
    }
}